{
    "name": "Twitch Clip Redirector",
    "description": "Redirects Twitch clips to standalone clips.twitch.tv page",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": [
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["*://*.twitch.tv/*"],
        "js": ["script.js"]
    }]
}